{
    "manifest_version": 3,
    "name": "Cookie Cap",
    "version": "1.0",
    "description": "Capture and export cookies from the current tab",
    "permissions": [
      "activeTab",
      "cookies"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }